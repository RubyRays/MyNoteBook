<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <nav id="main-navbar" class="navbar navbar-expand-lg nav-<%=theme%> fixed-top">
        <!-- Container wrapper -->
        <div class="container-fluid ">

            <!-- Brand -->
            <a class="navbar-brand" href="/pages">
                <h1><em>MyNoteBook</em></h1>
            </a>
            <!-- navbar toggle button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navContent"
                aria-controls="navContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
            <!-- links -->
            <div class="collapse navbar-collapse flex-container" id="navContent">
                <div class="navbar-nav mt-auto navbar-container">
                    <!-- search button -->
                    <div class="nav-align">
                        <form action="/search-results" method="Post">
                                <a class="btn nav-link" href="/search-results" ><i class="fa-solid fa-magnifying-glass"><p>Search</p></i> </a>
                        </form>   
                     </div>                            
                    <!-- checkout button -->
                    <div class="nav-align"><a class="btn  nav-link" href="/checkout" role="button"> <i class="fa-solid fa-credit-card "><p>Checkout</p></i> </a></div>
                    <!-- settings button -->
                    <div class="nav-align"><a class="btn  nav-link" href="/settings" role="button"> <i class="fa-solid fa-gear "><p>Settings</p></i> </a></div>
                    <!-- public-pages button -->
                    <div class="nav-align"><a class="btn  nav-link" href="/public-pages" role="button"> <i class="fa-solid fa-solid fa-globe"><p>Public</p></i></a></div>
                    <!-- trash button -->
                    <div class="nav-align"><a class="btn  nav-link" href="/trash" role="button"> <i class="fa-solid fa-trash "><p>Trash</p></i></a></div>
                    <!-- dark/light button -->
                     <div id="d-button"class="nav-align">
                        <form action="/nav?_method=PUT" method="POST">
                            
                            <input class="hide" value="<%=url%>" name="prevUrl">
                                <% if(theme!="dark" ){%>                       
                                    <input type="submit" class="btn nav-link " onclick="this.form.submit()" value="🌒" role="button"></input>
                                    <%}else{%>
                                        <input type="submit" class="btn nav-link" onclick="this.form.submit()" value="☀️" role="button"></input>
                                        <%}%>
                        
                        </form> 
                    </div>
                    <!-- profile picture -->
                    <div class="nav-align"><a class="btn nav-link nav-image" role="button"><img src="<%=pic%>" class="rounded-circle" alt="profile" loading="lazy" /></a></div>
                    <!-- logout button -->
                    <div class="nav-align"><a class="btn  nav-link " href="/logout" role="button"><i class="fa-solid fa-duotone fa-right-from-bracket"><p>Log Out</p> </i></a></div>
                </div>         
            </div>


        </div>
    </nav>