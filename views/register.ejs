<%-include('partials/nav2.ejs')-%>
<div class="container mt-5">
    <div class="row">
    <div class="col-md-8 col-sm-7">
    <!-- <main class="form-signin w-100 m-auto"> -->
    <form action="/register" class="form-signin" method="post">
        

        <h1 class="h3 mb-3 fw-normal login-register-style"><b>Register</b></h1>
        <!-- if the username is found then generate a random number at the end -->
        <input type="text" name="username" class="form-control top" id="floatingInput" placeholder="User Name" value="<%= typeof username !='undefined' ? username:''%>" required
            autofocus>
        <input type="email" name="email" class="form-control bottom" id="email" placeholder="Email" value="<%= typeof  email !='undefined' ?email: ''%>" required>
        <input type="password" name="password" class="form-control bottom" id="floatingPassword" placeholder="password" value="<% typeof password != 'undefined' ? password : ''%>" required>
        <input type="password" name="password2" class="form-control bottom" id="floatingPassword2" placeholder="Confirm password" value="<% typeof password2 != 'undefined' ? password2 : ''%>" required>

         <%-include('partials/flash.ejs')-%>
        <button class="w-100 btn btn-primary" type="submit">Register</button>
        <a class="page-link" href="/login">Already have an account? Click here to login.</a>

    </form>
<!-- </main> -->
</div>

<div class="col-md-4 col-sm-5 social-btn-container">
    <div class="card social-block social-btn-container">
            <a class="btn btn-block btn-social btn-google col-sm-12" href="/auth/google" role="button">
                <i class="fab fa-google "></i>
                Sign Up with Google
            </a>
       
    </div>
</div>
</div>
</div>


