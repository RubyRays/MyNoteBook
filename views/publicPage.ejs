<%-include('partials/nav.ejs')-%>

    <article class="blog-post">
        <h1 class="post-title">
           Public Page 
        </h1>
    

<% publicPosts.reverse().forEach(function(post){%>
    <div class="container-fluid note-entry">
       <div class="row">
            <div class="col-lg-10 col-md-10 col-sm-10 note">
                <!-- displays the shared note-->
                <h1 class="note-heading">
                     <%=post.title.substring(0,20) %>
                    <span class="date-style">
                        Posted by <%=post.owner%> on
                            <%=post.date%>
                                <%=post.time%>
                    </span>
                </h1>
                <p class="note-body">
                    <!-- displays part of the entry content and leads to public contents page -->
                    <%=post.content.substring(0,100) + "..." %> <button class="page-btn"><a href="/public-pages/<%=post._id%>">Go to page</a></button>
                </p>
            </div>
        </div>
    </div>
    <h2>---</h2>


    <% }) %>
    

<div class="back-btn">
    <a class="btn btn-light" href="/pages" role="button"><i class="fas fa-home"></i></a>
</div>

